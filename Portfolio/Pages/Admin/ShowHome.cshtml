@page
@model Portfolio.Pages.Admin.ShowHomeModel
@{
}
<form class="m-5 border p-3 rounded" method="post">
    <h1 class="text-center">Home Form</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="FirstName" class="form-label">First Name</label>
                <input type="text" class="form-control" asp-for="Home.FirstName" id="FirstName">
                <input type="text" hidden class="form-control" asp-for="Home.Id">
               
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="LastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="Home.LastName" id="LastName">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="DOB" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" asp-for="Home.DateOfBirth" id="DOB">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="Home.Address" id="Address">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="Zipcode" class="form-label">Zipcode</label>
                <input type="number" class="form-control" asp-for="Home.ZipCode" id="Zipcode">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Home.Email" id="Email">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="Phone" class="form-label">Phone</label>
                <input type="number" class="form-control" asp-for="Home.Phone" id="Phone">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="prono" class="form-label">Number of Projects</label>
                <input type="number" class="form-control" asp-for="Home.ProNO" id="prono">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
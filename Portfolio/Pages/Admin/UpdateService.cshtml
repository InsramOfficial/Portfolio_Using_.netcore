@page
@model Portfolio.Pages.Admin.UpdateServiceModel
@{
}
<form class="m-5 border p-3 rounded" method="post">
    <h1 class="text-center">Update Service</h1>
    <hr />
     <div class="container d-flex align-items-center justify-content-center  ">
         <div class="row w-100">
             <div class="col-md-6 mx-auto">
                 <div class="mb-3">
                     <label for="Title" class="form-label">Title</label>
                     <input type="text" class="form-control" asp-for="Services.Title" placeholder="Enter Your Title" id="Title">
                     <input type="type" hidden asp-for="Services.Id"/>
                 </div>
                 <div class="mb-3">
                     <label for="Description" class="form-label">Description</label>
                     <textarea class="form-control" id="Description" asp-for="Services.Description" placeholder="Enter Your Description" rows="5" cols="5"></textarea>
                 </div>
                 <div class="mb-3">
                     <label for="Icon" class="form-label">Icon</label>
                     <input type="text" class="form-control" asp-for="Services.Icon" placeholder="Enter the Code of icon from FontAwesome" id="Icon">
                     <small>Example: &lt;i class="fa-solid fa-laptop-code fa-2xl"&gt;&lt;/i&gt;</small>
                     <br>
                     <a href="https://fontawesome.com/icons" target="_blank">FontAwesome Icons</a>
                 </div>

                 <div>
                     <button type="submit" class="btn btn-success">Update</button>
                 </div>
             </div>
         </div>
     </div>



</form>  
<style>
    .contact-container {
      display: flex;
      color: white;
      justify-content: space-between;
      padding: 40px 20px;
      margin: 50px auto;
      max-width: 1200px;
    }

    .contact-form,
    .contact-info {
      background-color: black;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    .contact-info {
      background-color: rgba(255, 217, 0, 0.24);
      margin-left: 20px;
      transition: 0.3s ease-in-out;
      cursor: pointer;
    }

    .contact-info:hover {
      transform: translateY(-10px);
      background-color: rgba(255, 217, 0, 0.664);
    }

    .contact-form {
      width: 60%;
    }

    .contact-form h2,
    .contact-info h2 {
      margin-top: 0;
      font-size: 1.8rem;
    }

    .contact-form input,
    .contact-form textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .contact-form button {
      color: #e6f1ff;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      background-color: black;
      border: 1px solid white;
    }

    .contact-form button:hover {
      background-color: rgba(255, 217, 0, 0.664);
    }

    .contact-info {
      width: 35%;
    }

    .contact-info p {
      font-size: 1rem;
      line-height: 1.6;
    }

    .contact-info .icons {
      margin-top: 20px;
      display: flex;
      justify-content: center;
    }

    .contact-info .icons a {
      color: white;
      margin-right: 15px;
      text-decoration: none;
      font-size: 1.8rem;
      transition: color 0.3s;
    }

    .contact-info .icons a:hover {
      color: rgba(255, 217, 0, 0.664);
    }

    media (max-width: 768px) {
      .contact-container {
        flex-direction: column;
      }

      .contact-form,
      .contact-info {
        width: 100%;
        margin-bottom: 20px;
      }
    }
</style>

